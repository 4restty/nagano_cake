<h2>注文履歴詳細</h2>
<div>
  <h3>注文情報</h3>
  <table>
    <tbody>
      <tr>
        <th>注文日</th>
        <td>
          <%= @order.created_at.strftime('%Y/%m/%d') %>
        </td>
      </tr>
      <tr>
        <th>配送先</th>
        <td>
          <%= "〒#{@order.postal_code}" %>
          <%= @order.address %>
          <%= "#{@order.customer.last_name}#{@order.customer.first_name}"  %>
        </td>
      </tr>
      <tr>
        <th>支払方法</th>
        <td>
          <%= @order.payment_method_i18n %>
        </td>
      </tr>
      <tr>
        <th>ステータス</th>
        <td>
          <%= @order.order_status_i18n %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<div>
  <h3>請求情報</h3>
  <table>
    <tbody>
      <tr>
        <th>商品合計</th>
        <td>
          <%= @order.payment - @postage %>
        </td>
      </tr>
      <tr>
        <th>配送料</th>
        <td>
          <%= @order.postage %>
        </td>
      </tr>
      <tr>
        <th>ご請求額</th>
        <td>
          <%= @order.payment %>
        </td>
      </tr>
    </tbody>
  </table>
</div>
<div>
  <table>
    <thead>
      <th>商品</th>
      <th>単価(税込)</th>
      <th>個数</th>
      <th>小計</th>
    </thead>
    <tbody>
      <% @order.order_details.each do |detail| %>
        <tr>
          <td>
            <%= detail.item.name %>
          </td>
          <td>
            <%= detail.item.with_tax_price %>
          </td>
          <td>
            <%= detail.amount %>
          </td>
          <td>
            <%= detail.subtotal %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
