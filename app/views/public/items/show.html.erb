<%= attachment_image_tag @item, :image %>
<h2><%= @item.name %></h2>
<%= @item.introduction %>
<%= "¥#{@item.with_tax_price}(税込)" %>
<%= form_with model: CartItem.new, url: cart_items_path, local:true do |f| %>
  <%= f.hidden_field :item_id, value: @item.id %>
  <%= f.select :amount, *[1..10], prompt: "個数選択" %>
  <%= f.submit "カートに入れる" %>
<% end %>
