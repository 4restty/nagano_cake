<h2>注文履歴詳細</h2>
<div>
  <h3>購入者</h3>
  <%= link_to "#{@order.customer.last_name}#{@order.customer.first_name}", admin_customer_path(@order.customer) %>
  <h3>注文日</h3>
  <%= @order.created_at %>
  <h3>配送先</h3>
  <%= @order.address %>
  <h3>支払方法</h3>
  <%= @order.payment_method_i18n %>
  <h3>注文ステータス</h3>
  <%= form_with model: @order, url: admin_order_path, local:true do |f| %>
    <%= f.select :order_status, Order.order_statuses.keys.map {|k| [t("enums.order.order_status.#{k}"), k]} %>
    <%= f.submit "更新" %>
  <% end %>
</div>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th>制作ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% @order.order_details.each do |detail| %>
      <tr>
        <td><%= detail.item.name %></td>
        <td><%= detail.item.price %></td>
        <td><%= detail.amount %></td>
        <td><%= detail.price %></td>
        <td>
          <%= form_with model: detail, url: admin_order_detail_path, local:true do |f| %>
            <%= f.select :order_status, OrderDetail.order_statuses.keys.map {|k| [t("enums.order_detail.order_status.#{k}"), k]} %>
            <%= f.submit "更新" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<div>
  <h3>商品合計</h3>
  <% total = 0 %>
  <% @order.order_details.each do |detail| %>
    <% total += detail.price %>
  <% end %>
    <%= "#{total}円" %>
  <h3>送料</h3>
  <%= "#{@order.postage}円" %>
  <h3>請求金額合計</h3>
  <%= "#{@order.payment}円" %>
</div>